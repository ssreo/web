<!-- Modal -->
<div class="modal fade" id="modal{{@index}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">도서정보</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class = "col-4">
                <img src = "{{check thumbnail}}" width="90%">
            </div>
             <div class="col-8">
                    <h4>{{title}}</h4>
                    <hr>
                    <div>저자 : {{authors}}</div>
                    <div>가격 : {{fmt_price price}}</div>
                    <div>출판사 : {{publisher}}</div>
                    <div>출판일 : {{datetime}}</div>
                    <div>ISBN : {{isbn}}</div>
                </div>
            </div>
          </div>
          <hr>
          <div style="font-size:0.8rem">{{contents}}</div>
          <div></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">확인</button>
          </div>
        </div>
      </div>
    </div>
  